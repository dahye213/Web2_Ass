<%- include ('../partials/header.ejs')%>
<%- include ('../partials/main_nav.ejs')%>

<!--Content for the Edit page-->

<div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1 id="business_title"><%=title %></h1>
  
        <form class="form" method="post">
          <div class="from-group">
            <label for="nameTextField">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter your Name:"
              name="name"
              value="<%= business_contact.name %>"
              required
            />
          </div>
  
          <div class="from-group">
            <label for="emailTextField">Email</label>
            <input
              type="text"
              class="form-control"
              id="emailTextField"
              placeholder="Enter your Email:"
              name="email"
              value="<%= business_contact.email %>"
              required
            />
          </div>
  
          <div class="from-group">
            <label for="numberTextField">Contact Number</label>
            <input
              type="text"
              class="form-control"
              id="numberTextField"
              placeholder="Enter the contact number:"
              name="number"
              value="<%= business_contact.number %>"
              required
            />
          </div>
  
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>Submit
          </button>
  
          <a href="/contact-list" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel
          </a>
  
          </div>
  
      
  
         
        </form>
      </div>
    </div>
  </div>

<!--HTML bottom navigation part-->
<%- include ('../partials/bottom_nav.ejs')%>
